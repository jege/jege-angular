#signinModal.modal.hide.fade{"data-ng-controller"=>"SigninCtrl"}
  .modal-header
    %button.close{ :type => "button", "data-dismiss" => "modal" } &times;
    %h3 Sign in
  
  %form#formSignin.form-horizontal
    .modal-body
      .control-group
        %label.control-label{ :for => "inputSigninUsername" } Username
        .controls
          %input#inputSigninUsername.focus{:type => "text", :placeholder => "Username", "data-ng-model" => "credentials.username"}
      
      .control-group
        %label.control-label{ :for => "inputSigninPassword" } Password
        .controls
          %input#inputSigninPassword{:type => "password", :placeholder => "Password", "data-ng-model" => "credentials.password"}
          
      .control-group
        %label.control-label
        .controls
          %label{ :for => "inputSigninRememberMe" }
            %input#inputSigninRememberMe{:type => "checkbox", "data-ng-model" => "credentials.rememberMe"}
            Remember me
  
    .modal-footer
      %button.btn{ :type => "button", "data-dismiss" => "modal" } Cancel
      %button.btn.btn-primary.default{ :type => "button", "data-ng-click" => "signin()" } Sign in
 